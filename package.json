{
  "name": "live-web-editor",
  "version": "2.0.0",
  "description": "A live web editor for HTML, CSS and JS. Developed with web technologies using the framework Electron JS",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "pack": "electron-builder --dir",
    "dist": "electron-builder"
  },
  "repository": "https://github.com/Jdalvarezo/Live-Web-Editor.git",
  "keywords": [
    "editor",
    "live web editor",
    "web technologies",
    "desktop application",
    "HTML CSS JS",
    "electron JS"
  ],
  "author": "Jhonatan David Alvarez Ordosgoitia",
  "license": "ISC",
  "build": {
    "appId": "live-web-editor",
    "asar": true,
    "dmg": {
      "contents": [
        {
          "x": 110,
          "y": 150
        },
        {
          "x": 240,
          "y": 150,
          "type": "link",
          "path": "/Applications"
        }
      ]
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ]
    },
    "win": {
      "target": "NSIS",
      "icon": "build/icon.ico"
    }
  },
  "devDependencies": {
    "electron": "^9.3.1",
    "electron-builder": "^22.8.0"
  }
}
