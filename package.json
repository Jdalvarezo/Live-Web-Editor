{
  "name": "live-web-editor",
  "version": "1.0.2",
  "description": "Live web editor for HTML, CSS and JS",
  "main": "index.js",
  "scripts": {
    "start": "electron .",
    "pack": "electron-builder --dir",
    "dist": "electron-builder"
  },
  "repository": "https://github.com/Jdalvarezo/Live-Web-Editor.git",
  "keywords": [
    "editor",
    "web editor",
    "live web editor",
    "HTML CSS JS"
  ],
  "author": "Jhonatan Alvarez",
  "license": "ISC",
  "build": {
    "appId": "live-web-editor",
    "asar": true,
    "dmg": {
      "contents": [
        {
          "x": 110,
          "y": 150
        },
        {
          "x": 240,
          "y": 150,
          "type": "link",
          "path": "/Applications"
        }
      ]
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ]
    },
    "win": {
      "target": "NSIS",
      "icon": "build/icon.ico"
    }
  },
  "devDependencies": {
    "electron": "^8.2.4",
    "electron-builder": "^22.4.1"
  }
}
